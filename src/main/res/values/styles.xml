<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Edit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/opensignals_text_field</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/opensignals_green_translucent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Spinner" parent="Edit">
    </style>

    <style name="Button" parent="Edit">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/opensignals_green</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/opensignals_text_field</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
